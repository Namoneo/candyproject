<%= form_for @profile do |f| %>
    <% @profile.errors.full_messages.each do |msg| %>
        <p class="alert alert-danger"><%= msg %></p>
    <% end %>

    <div class="form-group">
      <label>First Name</label>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Street address</label>
      <%= f.text_area :street_address, placeholder: "Street adress:", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Number</label>
      <%= f.text_area :number, placeholder: "Number:", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>City</label>
      <%= f.text_area :city, placeholder: "City:", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Zip code</label>
      <%= f.text_area :zip_code, placeholder: "Zip code:", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>State / region</label>
      <%= f.text_area :state_region, placeholder: "State / region:", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Country</label>
      <%= f.text_area :country, placeholder: "Country:", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", root_path, class: "btn btn-default" %>
    </div>
<% end %>
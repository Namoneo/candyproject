<div class="row">
  <div class="col-md-3">
    <div class="lead"><center>CANDY STORE</center></div>
    <center><p> The most sweetest candies </p></center>
    <div class="list-group">
        <% @categories.each do |category| %>
        <div class="sidebar-link"><%=link_to category.name, category %> </div>
        <% end %>
  </div>
</div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <center>Sweetest candies</center>
      </div>
      <div class="panel-body">
        <% @products.each do |product| %>
        <div class="col-xs-4">
          <div class="img-thumbnail">
            <% product.photos.each do |photo| %>
            <div class="img-thumbnail"><%= image_tag photo.image.thumbnail, class: "img-responsive" %></div>
            <h4><%= link_to product.name, product %></h4>
            <h4>Price: <%= product.price %> Euro</h4>
 		<%= button_to 'Add to Cart', line_items_path(product_id: product) %>
            <% end %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
